@model IEnumerable<ESCHOOLING.Shared.Models.Attendance>
@{
    Layout = "_TeacherLayout";
}

<!DOCTYPE html>
<html lang="en" dir="">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Dashboard </title>
    <link href="https://fonts.googleapis.com/css?family=Nunito:300,400,400i,600,700,800,900" rel="stylesheet" />
    <link href="../../dist-assets/css/themes/lite-purple.min.css" rel="stylesheet" />
    <link href="../../dist-assets/css/plugins/perfect-scrollbar.min.css" rel="stylesheet" />

    <script src="~/js/Search.js"></script>
    <script src="~/js/Attendance.js"></script>
</head>

<body class="text-left">

    <div class="main-content">
        <div class="breadcrumb">
            @*<h1 class="mr-2">Version 1</h1>*@
            <ul>
                <li><a href="">View Attendance Details</a></li>
                <li>Student</li>
            </ul>
            <select class="form-control form-control-rounded mt-2 col-lg-2" id="searchByAttendance" value="" name="searchByAttendance">
                <option value=0>Search By month</option>
                <option value="2023-01">January</option>
                <option value="2023-02">February</option>
                <option value="2023-03">Marchn</option>
                <option value="2023-04">April</option>
                <option value="2023-05">May</option>
                <option value="2023-06">June</option>
                <option value="2023-07">July</option>
                <option value="2023-08">August</option>
                <option value="2023-09">September</option>
                <option value="2023-10">October</option>
                <option value="2023-11">November</option>
                <option value="2023-12">December</option>
            </select>
            &nbsp;&nbsp;

            <button class="btn btn-primary btn-block btn-rounded mt-2 col-lg-1 float-right" id="SearchForMonth" onclick="SearchByMonth_Click();"> Search</button>
            &nbsp;&nbsp;
            <input type="button" class="btn btn-success" value="Export to Excel" onclick="location.href='@Url.Action("ExportToExcel", "Admin")'" />
        </div>
        <div class="col-lg-12">
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Student Id</th>
                                <th scope="col">Attendance</th>
                                <th scope="col">Status</th>
                                <th scope="col">Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">
                                        @Html.DisplayFor(modelItem => item.StudentId)
                                    </th>
                                    <th scope="row">
                                        @if (item.IsPresent == true)
                                        {
                                            <span class="badge badge-success">Present</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">Absent</span>
                                        }
                                    </th>
                                    <td>
                                        @if (item.IsActive == true)
                                        {
                                            <span class="badge badge-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">Not Active</span>
                                        }

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    @*<td>
                                <a class="text-success mr-2" href="#"><i class="nav-icon i-Pen-2 font-weight-bold"></i></a><a class="text-danger mr-2" href="#"><i class="nav-icon i-Close-Window font-weight-bold"></i></a>
                                </td>*@
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- end of main-content -->
    </div>
</body>

</html>