@model IEnumerable<ECOMSYSTEM.Shared.Models.ApplicationUser>
@{
    Layout = "_TeacherLayout";
}

<!DOCTYPE html>
<html lang="en" dir="">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Dashboard </title>
    <link href="https://fonts.googleapis.com/css?family=Nunito:300,400,400i,600,700,800,900" rel="stylesheet" />
    <link href="../../dist-assets/css/themes/lite-purple.min.css" rel="stylesheet" />
    <link href="../../dist-assets/css/plugins/perfect-scrollbar.min.css" rel="stylesheet" />

    <script src="~/js/Search.js"></script>
</head>

<body class="text-left">

    <div class="main-content">
        <div class="breadcrumb">
            @*<h1 class="mr-2">Version 1</h1>*@
            <ul>
                <li><a href="">View Student List</a></li>
                <li>Student</li>
                <li>
             @*       <input type="button" class="btn btn-success" value="Export to Excel" onclick="location.href='@Url.Action("ExportToExcel", "Admin")'" />*@
                </li>
            </ul>
            <select class="form-control form-control-rounded mt-2 col-lg-2" value="" name="Grade" id="Grade">
                <option value=0>Search By Grade</option>
                <option value=9>Grade Nine</option>
                <option value=10>Grade Ten</option>
                <option value=11>Grade Eleven</option>
            </select>
            &nbsp;&nbsp;
            <button class="btn btn-primary btn-block btn-rounded mt-2 col-lg-1 float-right" id="SearchForStudent" onclick="SearchForStudentsBtn_Click();"> Search</button>
        </div>
        <div class="col-lg-12">
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Address</th>
                                <th scope="col">Status</th>
                                <th scope="col">Mobile</th>
                                <th scope="col">Registered Date</th>
                                <th scope="col">Grade</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">
                                        @Html.DisplayFor(modelItem => item.UserId)
                                    </th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Username)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @if (item.IsActive == true)
                                        {
                                            <span class="badge badge-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">Not Active</span>
                                        }

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MobileNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Grade)
                                    </td>
                                    <td>
                                        <button class="btn btn-success" onclick="EditProductsBtn_Click(@item.UserId,'@item.Username');" type="button"><i class="nav-icon i-Pen-2"></i></button>
                                        <button class="btn btn-danger" onclick="DeleteProductBtn_Click(@item.UserId,'@item.Username');" type="button"><i class="nav-icon i-Close-Window"></i></button>

                                    </td>
                                    @*<td>
                                <a class="text-success mr-2" href="#"><i class="nav-icon i-Pen-2 font-weight-bold"></i></a><a class="text-danger mr-2" href="#"><i class="nav-icon i-Close-Window font-weight-bold"></i></a>
                                </td>*@
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- end of main-content -->
    </div>
</body>

</html>