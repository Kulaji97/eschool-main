@{
    Layout = "_TeacherLayout";
}

<!DOCTYPE html>
<html lang="en" dir="">


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up | ECOM</title>
    <link href="https://fonts.googleapis.com/css?family=Nunito:300,400,400i,600,700,800,900" rel="stylesheet">
    <link href="../../dist-assets/css/themes/lite-purple.min.css" rel="stylesheet">

    <script src="~/js/RegisterDoc.js"></script>
    <!-- Sweet alert -->
    <script src="~/js/plugins/sweetalert/sweetalert.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <!-- Sweet alert -->
    <script src="~/js/plugins/sweetalert/sweetalert.min.js"></script>

</head>


<body class="text-left">

    <!-- ============ Body content start ============= -->
    <div class="main-content">
        <div class="breadcrumb">
            @*<h1 class="mr-2">Version 1</h1>*@
            <ul>
                <li><a href="">Mark Prediction</a></li>
                <li>Teacher</li>
            </ul>
        </div>
        <div class="col-lg-6">

            <div class="form-group">
                <label for="Id"> StudentId</label>
                <input class="form-control form-control-rounded" id="studentId" name="studentId" type="text" required>
            </div>
            <div class="form-group">
                <label for="Subject">Subject</label>
                <input class="form-control form-control-rounded" id="Subject" name="Subject" type="text" required>
            </div>
            <div class="form-group">
                <label for="Marks">Previously Test Marks 1</label>
                <input class="form-control form-control-rounded" id="Mark1" name="Mark1" type="text" required>
            </div>
            <div class="form-group">
                <label for="Marks">Previously Test Marks 2</label>
                <input class="form-control form-control-rounded" id="Mark2" name="Mark1" type="text" required>
            </div>
            <div class="form-group">
                <label for="Marks">Previously Test Marks 3</label>
                <input class="form-control form-control-rounded" id="Mark3" name="Mark1" type="text" required>
            </div>
            <div class="form-group">
                <label for="PredictedMark">Predicted Mark</label>
                <input class="form-control form-control-rounded" id="PredictedMark" name="PredictedMark" type="text" required>
            </div>
            <button class="btn btn-primary btn-block btn-rounded mt-2 col-lg-3 float-right" onclick=""> Predict Mark</button>
            &nbsp;&nbsp;
            <button class="btn btn-primary btn-block btn-rounded mt-2 col-lg-3 float-right" onclick=""> Save</button>
        </div>
        <!-- end of main-content -->
    </div>

</body>

</html>
