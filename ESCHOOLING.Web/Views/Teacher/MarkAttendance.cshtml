@model IEnumerable<ECOMSYSTEM.Shared.Models.ApplicationUser>
@{
    Layout = "_TeacherLayout";

    var searchUrl = Url.Action("Search", "Teacher");
}


<!DOCTYPE html>
<html lang="en" dir="">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Dashboard </title>
    <link href="https://fonts.googleapis.com/css?family=Nunito:300,400,400i,600,700,800,900" rel="stylesheet" />
    <link href="../../dist-assets/css/themes/lite-purple.min.css" rel="stylesheet" />
    <link href="../../dist-assets/css/plugins/perfect-scrollbar.min.css" rel="stylesheet" />

    <script src="~/js/Search.js"></script>
    <script src="~/js/Attendance.js"></script>
</head>

<script>

</script>

<body class="text-left">

    <div class="main-content">
        <div class="breadcrumb">
            @*<h1 class="mr-2">Version 1</h1>*@
            <ul>
                <li><a href="">View Student List</a></li>
                <li>Student</li>
                <li>
                    
                </li>
            </ul>

            <select class="form-control form-control-rounded mt-2 col-lg-2" value="" name="Grade" id="Grade">
                <option value=0>Search By Grade</option>
                <option value=9>9</option>
                <option value=10>10</option>
                <option value=11>11</option>
            </select>
            &nbsp;&nbsp;
            <button class="btn btn-primary btn-block btn-rounded mt-2 col-lg-1 float-right" id="searchButtonAttendance" onclick="SearchForAttendanceBtn_Click();"> Search</button>
        </div>
        <div class="col-lg-12">
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Student Id</th>
                                <th scope="col">Name</th>
                                <th scope="col">Status</th>
                                <th scope="col">Grade</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">
                                        @Html.DisplayFor(modelItem => item.UserId)
                                    </th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Username)
                                    </td>
                                    <td>
                                        @if (item.IsActive == true)
                                        {
                                            <span class="badge badge-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">Not Active</span>
                                        }

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Grade)
                                    </td>
                                    <td>
                                        @if(item.IsPresent == true){
                                            <button class="btn btn-success" type="button" onclick="PresentBtn_Click(@item.UserId);" id="presentBtn{@item.UserId}">Present</button>
                                            <button class="btn btn-danger" type="button" onclick="AbsentBtn_Click(@item.UserId);" id="absentBtn{@item.UserId}">Absent</button>
                                        }else{
                                            <button class="btn btn-danger" type="button" onclick="PresentBtn_Click(@item.UserId);" id="presentBtn{@item.UserId}">Present</button>
                                            <button class="btn btn-success" type="button" onclick="AbsentBtn_Click(@item.UserId);" id="absentBtn{@item.UserId}">Absent</button>
                                        }
                                        
                                    </td>
                                    @*<td>
                                <a class="text-success mr-2" href="#"><i class="nav-icon i-Pen-2 font-weight-bold"></i></a><a class="text-danger mr-2" href="#"><i class="nav-icon i-Close-Window font-weight-bold"></i></a>
                                </td>*@
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- end of main-content -->
    </div>
</body>

</html>
